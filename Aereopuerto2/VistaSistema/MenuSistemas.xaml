        <Label Content="Mantenimiento del sistema" HorizontalAlignment="Left" Margin="428,214,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Cascadia Code"/>
        <Label Content="Rendimiento del sistema" HorizontalAlignment="Left" Margin="433,294,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Cascadia Code"/>
        <CheckBox Content="Realizado" HorizontalAlignment="Left" Margin="456,250,0,0" VerticalAlignment="Top" FontSize="14"/>
        <CheckBox Content="En espera" HorizontalAlignment="Left" Margin="550,250,0,0" VerticalAlignment="Top" FontSize="14"/>
        <CheckBox Content="Optimo" HorizontalAlignment="Left" Margin="433,330,0,0" VerticalAlignment="Top" FontSize="14"/>
        <CheckBox Content="Bueno" HorizontalAlignment="Left" Margin="516,330,0,0" VerticalAlignment="Top" FontSize="14"/>
        <CheckBox Content="Mejorable" HorizontalAlignment="Left" Margin="586,330,0,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
